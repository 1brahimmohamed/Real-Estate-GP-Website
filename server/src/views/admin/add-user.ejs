<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%- pageTitle %></title>
  <link rel="shortcut icon" type="image/png" href="/img/logo/icon.png" />
  <link rel="stylesheet" href="/css-admin/styles.css" />
  <script src="/js/sweetalert2.all.min.js"></script>

</head>

<body>
<!--  Body Wrapper -->
<div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
     data-sidebar-position="fixed" data-header-position="fixed">
  <!-- Sidebar Start -->
  <%- include('sidebar.ejs')%>
  <!--  Sidebar End -->
  <!--  Main wrapper -->
  <div class="body-wrapper">
    <!--  Header Start -->
    <%- include('header.ejs')%>
    <!--  Header End -->
    <div class="container-fluid">
      <div class="container-fluid">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title fw-semibold mb-4">User Info</h5>
            <div class="card">
              <div class="card-body">
                <form id="user-data">
                  <div class="row">
                    <div style="width: 50%;" class="mb-3">
                      <label for="name" class="form-label">Name</label>
                      <input type="text" class="form-control" id="name" >
                    </div>
                    <div style="width: 50%;" class="mb-3">
                      <label for="email" class="form-label">Email</label>
                      <input type="email" class="form-control" id="email">
                    </div>
                  </div>

                  <div class="row">
                    <div style="width: 50%;" class="mb-3">
                      <label for="password" class="form-label">Password</label>
                      <input type="password" class="form-control" id="password" >
                    </div>
                    <div style="width: 50%;" class="mb-3">
                      <label for="password-confirm" class="form-label">Password Confirm</label>
                      <input type="password" class="form-control" id="password-confirm">
                    </div>
                  </div>


                  <div class="row">
                    <div style="width: 50%;" class="mb-3">
                      <label for="date" class="form-label">Date of Birth</label>
                      <input type="date" class="form-control" id="date" data="" >
                    </div>
                    <div style="width: 50%;" class="mb-3">
                      <label for="address" class="form-label">Address</label>
                      <input type="text" class="form-control" id="address">
                    </div>
                  </div>

                  <div class="row">
                    <div style="width: 50%;" class="mb-3">
                      <label for="phone" class="form-label">Phone Number</label>
                      <input type="number" class="form-control" id="phone">
                    </div>
                    <div style="width: 50%;" class="mb-3">
                      <label for="role" class="form-label">Active</label> <br>
                      <select class="form-control" id="role">
                        <option value='user'>User</option>
                        <option value='admin'>Admin</option>
                      </select>
                      </span>
                    </div>
                  </div>

                  <div class="row">
                    <div style="width: 50%;" class="mb-3">
                      <label for="nationality" class="form-label">Nationality</label>
                      <select id="nationality" class="form-control">
                        <option value="Egyptian">Egyptian</option>
                        <option value="Non-Egyptian">Non-Egyptian</option>
                      </select>
                    </div>
                    <div style="width: 50%;" class="mb-3">
                      <label for="nationalID" class="form-label">National ID</label>
                      <input type="number" class="form-control" id="nationalID">
                    </div>
                  </div>

                  <div class="row">
                    <div style="width: 50%;" class="mb-3">
                      <label for="job" class="form-label">Job</label>
                      <input type="text" class="form-control" id="job">
                    </div>
                    <div style="width: 50%;" class="mb-3">
                      <label for="salary" class="form-label">Salary</label>
                      <input type="number" class="form-control" id="salary">
                    </div>
                  </div>

                  <div class="row">
                    <div style="width: 50%;" class="mb-3">
                      <label for="martial-state" class="form-label">Martial State</label>
                      <select class="form-control" id="martial-state">
                        <option value="single" >Single</option>
                        <option value="married" >Married</option>
                        <option value="divorced" >Divorced</option>
                        <option value="widowed" >Widowed</option>
                      </select>
                      <!--                      <input type="text"  aria-describedby="emailHelp">-->
                    </div>
                    <div style="width: 50%;" class="mb-3">
                      <label for="email" class="form-label">Gender</label>
                      <select class="form-control" id="gender">
                        <option value="male" >Male</option>
                        <option value="female" >Female</option>
                      </select>
                      <!--                      <input type="email" class="form-control" id="email" aria-describedby="emailHelp">-->
                    </div>
                  </div>

                  <button id="add-btn" class="btn btn-primary">Add User</button>
                </form>
                <p id="message-response" style="display: none; color: red; text-align: center"></p>

              </div>
            </div>


            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="/libs-admin/jquery/dist/jquery.min.js"></script>

<script src="/libs-admin/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js-admin/sidebarmenu.js"></script>
<script src="/js-admin/app.min.js"></script>
<script src="/js-admin/addUser.js"></script>
<script src="/libs-admin/simplebar/dist/simplebar.js"></script>

</body>

</html>