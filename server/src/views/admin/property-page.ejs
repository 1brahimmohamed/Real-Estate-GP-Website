<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%- pageTitle %></title>
  <link rel="shortcut icon" type="image/png" href="/img/logo/icon.png" />
  <link rel="stylesheet" href="/css-admin/styles.css" />
  <script src="/js/sweetalert2.all.min.js"></script>

</head>

<body>
<!--  Body Wrapper -->
<div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
     data-sidebar-position="fixed" data-header-position="fixed">
  <!-- Sidebar Start -->
  <%- include('sidebar.ejs')%>
  <!--  Sidebar End -->
  <!--  Main wrapper -->
  <div class="body-wrapper">
    <!--  Header Start -->
    <%- include('header.ejs')%>
    <!--  Header End -->
    <div class="container-fluid">
      <div class="container-fluid">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title fw-semibold mb-4">Property Info</h5>
            <div class="card">
              <div class="card-body">
                <form id="property-data">

                  <div class="row">
                    <div style="width: 50%;" class="mb-3">
                      <label for="name" class="form-label">Name</label>
                      <input type="text" class="form-control" id="name"  value="<%- property.name%>">
                    </div>
                    <div style="width: 50%;" class="mb-3">
                      <label for="slug" class="form-label">Slug</label>
                      <input type="text" class="form-control" id="slug" value="<%- property.slug %>">
                    </div>
                  </div>

                  <div class="row">
                    <div style="width: 50%;" class="mb-3">
                      <label for="price" class="form-label">Price</label>
                      <input type="number" class="form-control" id="price"  value="<%- property.price %>">
                    </div>
                    <div style="width: 50%;" class="mb-3">
                      <label for="offer" class="form-label">Offer</label>
                      <input type="number" class="form-control" id="offer" value="<%- property.offer %>">
                    </div>
                  </div>

                  <div class="row">
                    <div style="width: 50%;" class="mb-3">
                      <label for="city" class="form-label">City</label>
                      <input type="text" class="form-control" id="city" value="<%- property.city %>">
                    </div>

                    <div style="width: 50%;" class="mb-3">
                      <label for="area" class="form-label">Area</label>
                      <input type="text" class="form-control" id="area" value="<%- property.area %>">
                    </div>

                  </div>

                  <div class="row">
                    <div style="width: 50%;" class="mb-3">
                      <label for="address" class="form-label">Address</label>
                      <input type="text" class="form-control" id="address" value="<%- property.address %>">
                    </div>
                    <div style="width: 50%;" class="mb-3">
                      <label for="type" class="form-label">Type</label>
                      <select class="form-control" id="type">
                        <option value="apartment" <%- property.type === 'apartment'? 'selected': ''%>>Apartment</option>
                        <option value="house" <%- property.type === 'house'? 'selected': ''%>>House</option>
                        <option value="villa" <%- property.type === 'villa'? 'selected': ''%>>Villa</option>
                        <option value="office" <%- property.type === 'office'? 'selected': ''%>>Office</option>
                      </select>
                    </div>
                  </div>

                  <div class="row">
                    <div style="width: 33%;" class="mb-3">
                      <label for="rooms" class="form-label">Rooms</label>
                      <input type="text" class="form-control" id="rooms" value="<%- property.rooms %>">
                    </div>
                    <div style="width: 33%;" class="mb-3">
                      <label for="salary" class="form-label">Bathrooms</label>
                      <input type="number" class="form-control" id="bathrooms" value="<%- property.bathrooms %>">
                    </div>
                    <div style="width: 34%;" class="mb-3">
                      <label for="salary" class="form-label">Balaconies</label>
                      <input type="number" class="form-control" id="balconies" value="<%- property.balconies %>">
                    </div>
                  </div>

                  <div class="row">
                    <div style="width: 33%;" class="mb-3">
                      <label for="rooms" class="form-label">Square Meters</label>
                      <input type="text" class="form-control" id="squareMeters" value="<%- property.squareMeters %>">
                    </div>
                    <div style="width: 33%;" class="mb-3">
                      <label for="salary" class="form-label">Floor</label>
                      <input type="number" class="form-control" id="floor" value="<%- property.floor %>">
                    </div>

                    <div style="width: 34%;" class="mb-3">
                      <label for="martial-state" class="form-label">Duplex</label>
                      <select class="form-control" id="duplex">
                        <option value="true" <%- property.duplex ? 'selected': ''%>>Duplex</option>
                        <option value="false" <%- property.duplex? 'selected': ''%>>Normal</option>
                      </select>
                    </div>

                  </div>

                  <div class="row">
                    <div style="width: 100%;" class="mb-3">
                      <label for="rooms" class="form-label">Description</label>
                      <input type="text" class="form-control" id="description" value="<%- property.description %>">
                    </div>
                  </div>

                  <button id="dataBtn" class="btn btn-primary">Update Property</button>
                  <button id="deleteBtn" class="btn btn-primary">Delete Property</button>

                </form>
                <p id="message-response" style="display: none; color: red; text-align: center"></p>

              </div>
            </div>

            <h5 class="card-title fw-semibold mb-4">User Inquires</h5>

            <% for (let i = 0; i < inquires.length ; i++) { %>
              <% if (i%3 === 0) { %>
              <div class="row">
                <% }%>
                <div class="card col-lg-4">
                  <div class="card-body">
                    <h5 class="card-title"><%- inquires[i].user.name%></h5>
                    <p class="card-text"><%- inquires[i].message%></p>
                    <a href="/admin/inquries/<%- inquires[i]._id%>" class="card-link">Go to it</a>
                  </div>
                </div>
                <% if ((i + 1) % 3 === 0 || i === inquires.length - 1) { %>
              </div>
              <% } %>
            <% } %>


            <div class="row">

            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="/libs-admin/jquery/dist/jquery.min.js"></script>

<script src="/libs-admin/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js-admin/sidebarmenu.js"></script>
<script src="/js-admin/app.min.js"></script>
<script src="/js-admin/propertyPage.js"></script>
<script src="/libs-admin/simplebar/dist/simplebar.js"></script>

</body>

</html>